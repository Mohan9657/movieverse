generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String
}

model Review {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  userId    String
}

model Booking {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  movieId   String
  movieName String
  theater   String
  date      String
  time      String
  seats     String
  createdAt DateTime @default(now())

  @@map("Booking")   // ðŸ”¥ FIXED HERE
}
